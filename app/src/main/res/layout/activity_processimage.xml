<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="fill"
    android:id="@+id/process_image_layout"
    >

    <ImageView
        android:id="@+id/process_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:scaleType="fitCenter"
        android:src="@mipmap/pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFACD"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit_photo"
            style="@style/PickActivityButton"
            android:background="@drawable/btn_round_edit"
            android:text="@string/edit_photo" />

        <Button
            style="@style/PickActivityButton"
            android:background="@drawable/btn_round_save"
            android:id="@+id/save_photo"
            android:text="@string/save_photo" />

        <Button
            style="@style/PickActivityButton"
            android:background="@drawable/btn_round_restart"
            android:id="@+id/cancel"
            android:text="还原" />

    </LinearLayout>


</LinearLayout>

